  "validation_rules": [
    {
      "rule_id": "BS001",
      "rule": "TOTAL_ASSETS == TOTAL_LIABILITIES_AND_EQUITY",
      "severity": "error",
      "message": "Balance sheet does not balance"
    },
    {
      "rule_id": "BS002",
      "rule": "CASH >= 0",
      "severity": "error",
      "message": "Cash cannot be negative"
    },
    {
      "rule_id": "BS003",
      "rule": "TOTAL_CURRENT_ASSETS >= 0",
      "severity": "error",
      "message": "Total current assets cannot be negative"
    },
    {
      "rule_id": "BS004",
      "rule": "TOTAL_ASSETS >= 0",
      "severity": "error",
      "message": "Total assets cannot be negative"
    },
    {
      "rule_id": "BS005",
      "rule": "PPE_NET == PPE_GROSS - ACCUMULATED_DEPRECIATION",
      "severity": "error",
      "message": "Net PPE calculation mismatch"
    },
    {
      "rule_id": "BS006",
      "rule": "TOTAL_EQUITY == SHARE_CAPITAL + RETAINED_EARNINGS + OTHER_RESERVES",
      "severity": "error",
      "message": "Total equity calculation mismatch"
    },
    {
      "rule_id": "BS007",
      "rule": "ACCOUNTS_RECEIVABLE >= 0",
      "severity": "error",
      "message": "Accounts receivable cannot be negative"
    },
    {
      "rule_id": "BS008",
      "rule": "INVENTORY >= 0",
      "severity": "error",
      "message": "Inventory cannot be negative"
    },
    {
      "rule_id": "BS009",
      "rule": "TOTAL_CURRENT_LIABILITIES / TOTAL_CURRENT_ASSETS < 2.0",
      "severity": "warning",
      "message": "Current ratio below 0.5 - potential liquidity issue"
    }
  ],
